generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Student{
  rollno String @id 
  name String
  password String
  dept String
  section String
  year Int
  contactno String
  polled Polled[]
  notPolled notPolledReason[]
}

model Admin{
  email String @id
  name String
  password String
  dept String
  section String?
  polls Poll[]
}

model pollOptions{
  id Int @id @default(autoincrement())
  name String
  reason Boolean @default(false)
  pollid Int
  poll Poll @relation(fields: [pollid],references: [id])
}

model notPolledReason{
  id Int @id @default(autoincrement())
  pollid Int
  poll Poll @relation(fields: [pollid],references: [id])
  reason String
  studentId String
  student Student @relation(fields: [studentId],references: [rollno])
}
model Poll{
  id Int @id @default(autoincrement())
  title String
  description String
  options pollOptions[]
  automatic Boolean @default(false)
  sttime String
  endtime String
  stdate String
  enddate String
  type String @default("General")
  count Int
  polled  Polled[]
  createdby String
  notPolled notPolledReason[]
  admin Admin @relation(fields: [createdby],references: [email])
}
model Polled{
  id Int  @id @default(autoincrement())
  pollid Int 
  studrollno String
  student Student @relation(fields: [studrollno],references: [rollno])
  poll Poll @relation(fields: [pollid],references: [id])
}




