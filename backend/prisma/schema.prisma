generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Student{
  rollno String @id
  email String @unique @default("yashwanthviratkohli@gmail.com")
  name String
  password String
  dept String
  section String
  year Int
  contactno String?
  polled Polled[]
}

model Admin{
  email String @id
  name String
  password String
  dept String
  section String?
  polls Poll[]
}

model pollOptions{
  id Int @id @default(autoincrement())
  name String
  count Int
  reason Boolean @default(false)
  pollid Int
  poll Poll @relation(fields: [pollid],references: [id])
  polled Polled[]
}

model Poll{
  id Int @id @default(autoincrement())
  title String
  description String
  options pollOptions[]
  Instant Boolean @default(true)
  sttime DateTime?
  stdate DateTime?
  type String @default("General")
  count Int
  completed Boolean @default(false)
  polled  Polled[]
  createdby String
  admin Admin @relation(fields: [createdby],references: [email])
}
model Polled{
  id Int  @id @default(autoincrement())
  pollid Int 
  studrollno String
  reason String?
  option Int
  optionClicked pollOptions @relation(fields: [option],references: [id])
  student Student @relation(fields: [studrollno],references: [rollno])
  poll Poll @relation(fields: [pollid],references: [id])
}




